totem {
  version: 2
  cluster_name: mysql_cluster
  transport: udpu
  interface {
    ringnumber: 0
    bindnetaddr: <%= @ipaddress %>
    broadcast: yes
    mcastport: 5405
  }
}

quorum {
  provider: corosync_votequorum
  two_node: 1
}

nodelist {
  node {
    ring0_addr: 192.168.236.140
    name: db1.localdomain.lan
  }
  node {
    ring0_addr: 192.168.236.144
    name: db2.localdomain.lan
  }
}

logging {
  to_logfile: yes
  logfile: /var/log/corosync/corosync.log
  to_syslog: yes
  timestamp: on
}